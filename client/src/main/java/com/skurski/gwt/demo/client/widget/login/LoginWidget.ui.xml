<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:HTMLPanel addStyleNames="login-container">
        <g:VerticalPanel>
            <g:Label text="Login" />
            <g:TextBox ui:field="loginBox"/>
            <g:Label text="Password" />
            <g:PasswordTextBox ui:field="passwordBox" />
            <g:HorizontalPanel verticalAlignment="middle">
                <g:Button ui:field="buttonSubmit" text="Submit"/>
                <g:CheckBox ui:field="myCheckBox" />
                <g:Label ui:field="myLabel" text="Remember me" />
            </g:HorizontalPanel>
            <g:Label ui:field="completionLabel1"/>
            <g:Label ui:field="completionLabel2"/>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>