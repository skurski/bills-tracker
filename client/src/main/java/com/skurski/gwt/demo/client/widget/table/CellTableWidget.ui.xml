<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <g:HTMLPanel ui:field="contentPanel">
        <c:CellTable addStyleNames='cellTable'
                     pageSize='10'
                     width="100%"
                     ui:field='table' />
        <div id="cellTablePagerContainer">
            <c:SimplePager ui:field='pager' location="CENTER" />
            <g:Button ui:field="updateButton"></g:Button>
            <g:Button ui:field="deleteButton"></g:Button>
            <g:Button ui:field="addButton"></g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>